@model IEnumerable<Product>

<div class="row pb-3">
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="col-12 p1">
                <div class=" card border-0 p-3 shadow border-top border-5 rounded h-100">
                    <img src="@product.ImageUrl" class="card-img-top rounded" height="400" width="100" />
                    <div class="card-body pb-1">
                        <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@product.Title</p>
                        <p class="card-title text-primary text-center"><b>@product.Author</b></p>
                    </div>
                    <div class="list-group list-group-flush bg-secondary">
                        <div class="card-body pb-1">
                            <p class="text-dark text-opacity-75 text-center mb-0">
                                List Price:
                                <span class="text-decoration-line-through">
                                    @product.ListPrice.ToString("c", CultureInfo.CreateSpecificCulture("en-US"))
                                </span>
                            </p>
                        </div>
                        <div class="card-body pb-1">
                            <p class="text-dark text-opacity-75 text-center">
                                As low as:
                                <span>
                                    @product.PriceFor100.ToString("c", CultureInfo.CreateSpecificCulture("en-US"))
                                </span>
                            </p>
                        </div>
                    </div>
                </div>
                <div>
                    <a asp-action="Details"
                       asp-route-id="@product.Id" class="btn btn-primary bg-gradient border-0 form-control">
                        Details
                    </a>
                </div>
            </div>
        </div>
    }
</div>
